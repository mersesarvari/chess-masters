{
  "manifest_version": 3,
  "name": "ChessSolve Bot",
  "version": "1.2.0",
  "description": "A chess analysis bot for browser-based chess games",
  "permissions": ["activeTab", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "bot.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.chess.com/*"],
      "js": ["chess-board.js"]
    },
    {
      "matches": ["*://*.lichess.org/*"],
      "js": ["lychess-board.js"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
